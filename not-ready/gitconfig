[user]
	name = username
	email = username@domain
	signingKey = key

[core]
	autocrlf = input
	safecrlf = true

[diff]
	tool = diffuse

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	as = commit --amend --no-edit --gpg-sign
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --all
	type = cat-file -t
	dump = cat-file -p

[push]
	default = current

[commit]
	gpgsign = true

